    <!-- 自定义对话框的样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#DCDCDC</item>
    </style>

    <style name="SelectListDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <!-- 自定义RatingBar样式 -->
    <style name="custom_ratingbar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="text_header_stu_grade_style">
        <item name="android:textColor">@color/bg_color_first</item>
    </style>

    <style name="text_label_mine_info_item_style">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="edittext_mine_info_item_tyle">
        <item name="android:enabled">false</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#00FFFFFF</item>
    </style>






    <!-- 背景设为透明，用于启动和登录页面-->
    <!--<style name="TranslateThemeFull" parent="android:style/Theme.Holo.Light.NoActionBar">-->
    <style name="TranslateThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TranslateTheme" parent="ActionbarNoIcon">
        <item name="android:windowBackground">@drawable/transparent</item>
    </style>

    <!--透明的actionbar-->
    <style name="TranslateActionbar" parent="Theme.AppCompat">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="color">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
    </style>

    <style name="MyApp.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/white</item>
    </style>

