<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dip"
    android:gravity="center_vertical"
    android:background="@drawable/shape_radius"
    android:minHeight="90dip">

    <TextView
        android:id="@+id/process_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/process_things"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dip"
        android:singleLine="true"
        android:textSize="15dp"
        android:layout_below="@+id/process_time"
        android:layout_alignStart="@+id/process_time" />

    <TextView
        android:id="@+id/process_people"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dip"
        android:singleLine="true"
        android:textSize="15dp"
        android:layout_below="@+id/process_things"
        android:layout_alignStart="@+id/process_things" />


</RelativeLayout>