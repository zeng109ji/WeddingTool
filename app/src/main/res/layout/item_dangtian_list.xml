<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dip"
    android:gravity="center_vertical"
    android:background="@drawable/shape_radius"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="90dip">

    <TextView
        android:id="@+id/process_text1"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="时间"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/process_time"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:layout_alignTop="@+id/process_text1"
        android:layout_alignStart="@+id/process_text1" />

    <TextView
        android:id="@+id/process_text2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="事宜"
        android:layout_below="@+id/process_text1" />

    <TextView
        android:id="@+id/process_things"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:layout_alignTop="@+id/process_text2"
        android:layout_alignStart="@+id/process_text2" />

    <TextView
        android:id="@+id/process_text3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="人员"
        android:layout_below="@+id/process_things" />


    <TextView
        android:id="@+id/process_people"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:layout_alignTop="@+id/process_text3"
        android:layout_alignStart="@+id/process_text3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn_remove_process"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/calendar"
        android:layout_alignBottom="@+id/process_time" />


</RelativeLayout>