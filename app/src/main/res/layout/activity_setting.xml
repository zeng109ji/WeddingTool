<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_list_head">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/list_item_selector"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理图片缓存"
                android:textColor="#222222"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="6.83 M"/>

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divide_15_top_bottom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/list_item_selector"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许他人查看信息"
                android:textColor="#222222"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

            <CheckBox
                android:layout_alignParentRight="true"
                android:id="@+id/cb_access_user_info"
                android:button="@null"
                android:checked="true"
                android:layout_centerVertical="true"
                android:background="@drawable/push_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/list_item_selector"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许接受私信"
                android:textColor="#222222"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

            <CheckBox
                android:layout_alignParentRight="true"
                android:id="@+id/cb_access_private_msg"
                android:button="@null"
                android:checked="true"
                android:layout_centerVertical="true"
                android:background="@drawable/push_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>


</ScrollView>
