<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="费用合计："
                android:textSize="15dp"
                android:id="@+id/jhyusuan_heji"
                android:textColor="@color/color_yellow"/>
            <EditText
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:singleLine="true"
                android:id="@+id/jhyusuan_heji_edit"
                android:drawableLeft="@drawable/money"
                android:background="@drawable/shape_radius"
                android:editable="false"
                android:textColor="@color/color_yellow"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:text="@string/add_yusuan_item"
                    android:id="@+id/itemadd"
                    android:layout_width="108dp"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:textColor="@color/color_yellow"
                    android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_000"/>
                </LinearLayout>
        </LinearLayout>


  <!--android:divider="#00000000"分割线隐藏-->

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_yusuan"
        android:layout_marginTop="30dp"
        android:divider="#00000000"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
