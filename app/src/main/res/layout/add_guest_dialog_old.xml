    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="姓名"
        android:id="@+id/add_guest_name"
        android:singleLine="true"
        android:editable="true"
        android:maxLength="20"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_guest_number"
        android:hint="人数"
        android:numeric="integer"
        android:maxLength="3"
        android:editable="true"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_guest_group"/>
